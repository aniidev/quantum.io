{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./client/dist",
    "rootDir": "./client/src",
    "moduleResolution": "node"
  },
  "include": ["client/src/**/*"],
  "exclude": ["node_modules"]
}
